---
const projects = [
  {
    title: "Project Alpha",
    description: "A powerful framework for building scalable applications",
    github: "#",
    stars: "2.5k"
  },
  {
    title: "Project Beta",
    description: "Modern tooling for efficient development workflows",
    github: "#",
    stars: "1.8k"
  },
  {
    title: "Project Gamma",
    description: "Advanced data processing and analytics library",
    github: "#",
    stars: "3.2k"
  }
];
---
<section id="projects" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-12">Our Projects</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-xl font-semibold mb-3">{project.title}</h3>
          <p class="text-gray-600 mb-4">{project.description}</p>
          <div class="flex items-center justify-between">
            <a href={project.github} class="text-purple-600 hover:text-purple-800">View on GitHub</a>
            <span class="text-gray-500">‚≠ê {project.stars}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
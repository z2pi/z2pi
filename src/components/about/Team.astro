---
const team = [
  {
    name: 'Sarah Johnson',
    role: 'CEO & Founder',
    image: '/avatars/sarah.jpg',
    github: '#',
    linkedin: '#'
  },
  {
    name: 'Michael Chen',
    role: 'CTO',
    image: '/avatars/michael.jpg',
    github: '#',
    linkedin: '#'
  },
  {
    name: 'Alex Rodriguez',
    role: 'Head of Community',
    image: '/avatars/alex.jpg',
    github: '#',
    linkedin: '#'
  }
];
---
<section id="team" class="py-20 bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Meet the Team</h2>
      <p class="text-xl text-gray-400">The people behind our mission</p>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      {team.map(member => (
        <div class="bg-gray-800 rounded-2xl p-6 text-center hover:bg-gray-700/50 transition-colors duration-300">
          <div class="relative w-32 h-32 mx-auto mb-6">
            <img
              src={member.image}
              alt={member.name}
              class="rounded-full object-cover w-full h-full"
            />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">{member.name}</h3>
          <p class="text-gray-400 mb-4">{member.role}</p>
          <div class="flex justify-center space-x-4">
            <a href={member.github} class="text-gray-400 hover:text-white transition-colors duration-300">
              <span class="sr-only">GitHub</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href={member.linkedin} class="text-gray-400 hover:text-white transition-colors duration-300">
              <span class="sr-only">LinkedIn</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href="#join-us" class="inline-flex items-center px-8 py-3 rounded-full text-base font-medium text-white bg-primary hover:bg-primary/90 transition-colors duration-300">
        Join Our Team
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
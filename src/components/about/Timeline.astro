---
const milestones = [
  {
    year: '2020',
    title: 'Foundation',
    description: 'Z2pi was founded with a vision to revolutionize open-source development.'
  },
  {
    year: '2021',
    title: 'First Major Release',
    description: 'Launched our flagship project with over 10,000 stars on GitHub.'
  },
  {
    year: '2022',
    title: 'Community Growth',
    description: 'Reached 100,000 active developers in our community.'
  },
  {
    year: '2023',
    title: 'Global Impact',
    description: 'Projects adopted by leading tech companies worldwide.'
  }
];
---
<section class="py-20 bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Our Journey</h2>
      <p class="text-xl text-gray-400">Key milestones in our mission to empower developers</p>
    </div>
    <div class="relative">
      <div class="absolute top-0 left-1/2 -ml-px h-full w-0.5 bg-gray-700"></div>
      <div class="space-y-12">
        {milestones.map((milestone, index) => (
          <div class="relative">
            <div class="flex items-center">
              <div class="flex-shrink-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center">
                <span class="text-white font-bold">{milestone.year}</span>
              </div>
              <div class="ml-6">
                <h3 class="text-xl font-semibold text-white">{milestone.title}</h3>
                <p class="mt-2 text-gray-400">{milestone.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>